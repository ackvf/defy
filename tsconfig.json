{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "_typings": ["typings"],
      "_typings/*": ["typings/*"],
      "_abi/*": ["abi/*"]
    }
  },
    "ts-node": { // used by hardhat
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs"
    }
  },
    "ts-mocha": { // used by hardhat
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs"
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", ".eslintrc.js"],
  "exclude": ["node_modules"]
}
